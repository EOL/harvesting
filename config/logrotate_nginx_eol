/data/publishing/nginx_log/access.log {
    size 1G
    rotate 3
    compress
    delaycompress
    missingok
    notifempty
    create 0644 root root
    postrotate
        /usr/bin/docker exec nginx nginx -s reopen
    endscript
}

/data/publishing/nginx_log/error.log {
    size 1G
    rotate 3
    compress
    delaycompress
    missingok
    notifempty
    create 0644 root root
    postrotate
        /usr/bin/docker exec nginx nginx -s reopen
    endscript
}
